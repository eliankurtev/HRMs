<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">
    <changeSet id="20181202-1-users-table" author="Rumyana Krumova">
        <createTable tableName="person">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="firstName" type="varchar"/>
            <column name="middleName" type="varchar"/>
            <column name="lastName" type="varchar"/>
            <column name="gender" type="varchar"/>
            <column name="area" type="varchar"/>
            <column name="city" type="varchar"/>
            <column name="address" type="varchar"/>
        </createTable>
        <createTable tableName="employee">
            <column name="person_id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar"/>
            <column name="start_date" type="timestamp"/>
            <column name="end_date" type="timestamp"/>
            <column name="photo" type="varchar"/>
            <column name="vacationDays" type="int"/>
            <column name="jobNumber" type="int"/>
            <column name="workingHours" type="int"/>
            <column name="workingDays" type="int"/>
            <column name="manager" type="bigint"/>
        </createTable>
        <createTable tableName="company">
            <column name="eik" type="smallint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>
            <column name="area" type="varchar"/>
            <column name="city" type="varchar"/>
            <column name="address" type="varchar"/>
            <column name="manager_id" type="bigint"/>
        </createTable>
        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="role" type="varchar"/>
        </createTable>
        <createTable tableName="grade">
            <column type="bigint" name="id" autoIncrement="true"/>
            <column type="varchar" name="name"/>
        </createTable>
        <createTable tableName="skill">
            <column type="bigint" name="id" autoIncrement="true"/>
            <column type="varchar" name="name"/>
        </createTable>
        <createTable tableName="department">
            <column type="bigint" name="id" autoIncrement="true">
            <constraints primaryKey="true"/>
            </column>
            <column type="varchar" name="name"/>
        </createTable>
        <createTable tableName="position">
            <column type="bigint" name="id" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column type="bigint" name="department"/>
            <column type="bigint" name="employee"/>
            <column type="int" name="jobID"/>
        </createTable>
        <createTable tableName="project">
            <column type="bigint" name="id" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>            <column type="varchar" name="name"/>
            <column name="start_date" type="timestamp"/>
            <column name="end_date" type="timestamp"/>
        </createTable>
        <createTable tableName="security_data">
            <column type="bigint" name="id" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column type="smallint" name="egn"/>
            <column name="idNumber" type="smallint"/>
            <column name="issuedDate" type="timestamp"/>
            <column name="authority" type="varchar"/>
            <column name="yearsOfLabour" type="int"/>
            <column name="monthsOfLabour" type="int"/>
            <column name="daysOfLabour" type="int"/>
            <column name="salary" type="real"/>
            <column name="IBAN" type="varchar"/>
        </createTable>
    </changeSet>
</databaseChangeLog>